{
    "forEach": "entities",
    "filename": "src/app/components/entities/{{kebabCase name}}/{{kebabCase name}}.component.html"
}
---
<h2>{{pascalCase name}} <button mat-raised-button (click)="onCreate()">Create {{pascalCase name}}</button></h2>
<table mat-table [dataSource]="dataSource" class="mat-elevation-z8">

    {{#each attributes}}
        <ng-container matColumnDef="{{camelCase name}}">
            <th mat-header-cell *matHeaderCellDef> {{name}} </th>
            <td mat-cell *matCellDef="let element"> \{{element.{{camelCase name}} }} </td>
        </ng-container>
    {{/each}}
    {{#each associations}}
        <ng-container matColumnDef="{{camelCase name}}">
            <th mat-header-cell *matHeaderCellDef> {{name}} </th>
            <td mat-cell *matCellDef="let element"> \{{element.{{camelCase name}}Id }} </td>
        </ng-container>
    {{/each}}
  
    <tr mat-header-row *matHeaderRowDef="displayedColumns"></tr>
    <tr mat-row (click)="onRowClick(row)" class="tableRow" *matRowDef="let row; columns: displayedColumns;"></tr>
</table>